<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Engine bean: constructor arguments model (String) and horsepower (int) -->
    <bean id="engine" class="com.example.springdi.Engine">
        <constructor-arg index="0" value="V8-2025"/>         <!-- model -->
        <constructor-arg index="1" value="400"/>            <!-- horsepower -->
    </bean>

    <!-- Car bean: constructor args: Engine ref and color -->
    <bean id="car" class="com.example.springdi.Car">
        <constructor-arg index="0" ref="engine"/>
        <constructor-arg index="1" value="Red"/>
    </bean>

</beans>
